// Ejemplo 12: Switch/Case

// Switch básico con números
let numero = 2;

switch (numero) {
    case 1:
        echo("Es uno");
    case 2:
        echo("Es dos");
    default:
        echo("Es otro número");
}

// Switch con strings
let dia = "lunes";

switch (dia) {
    case "lunes":
        echo("Inicio de semana");
    case "viernes":
        echo("Fin de semana cerca");
    default:
        echo("Día normal");
}
