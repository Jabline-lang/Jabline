// Ejemplo 11: Números Flotantes

// Declarar números flotantes
let pi = 3.14159;
let temperatura = -5.5;
let precio = 29.99;

echo("Pi: " + pi);
echo("Temperatura: " + temperatura + "°C");

// Operaciones aritméticas con flotantes
let radio = 2.5;
let area = pi * radio * radio;
echo("Área del círculo: " + area);

// Mezclar enteros y flotantes
let entero = 10;
let resultado = entero + 3.5;
echo("10 + 3.5 = " + resultado);

// Operadores con flotantes
precio++;
echo("Nuevo precio: " + precio);
